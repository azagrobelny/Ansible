---
- hosts: Cisco
  gather_facts: false
  connection: network_cli

  tasks:
    - name: TASK1_show version
      ios_command:
        commands: show version
      register: version

    - name: TASK2_display version
      debug:
        var: version["stdout_lines"][0]
    
    - name: TASK3_show ip int brief
      ios_command:
        commands: show ip int brief
      register: interfaces

    - name: TASK3_display int brief
      debug:
        var: interfaces["stdout_lines"][0]


//* lub (opcja skr√≥cona z jedna zmienna) //


---
- hosts: Cisco
  gather_facts: false
  connection: network_cli

  tasks:
    - name: TASK1_run multiple commands
      ios_command:
        commands: 
        - show version
        - show ip interface brief
      register: output

    - name: TASK2_display all
      debug:
        var: output["stdout_lines"]
